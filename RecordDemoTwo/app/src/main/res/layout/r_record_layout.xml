<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/relative_showchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iamgeview_change"
            android:layout_width="46dip"
            android:layout_height="32dip"
            android:layout_marginLeft="15dip"
            android:background="@drawable/changelayout_bg"
            android:layout_marginTop="20dip"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_recordstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="准备录音"
        android:textSize="16sp"
        android:layout_below="@+id/relative_showchange"
        android:layout_marginTop="5dip"
        />

    <TextView
        android:id="@+id/textview_recordtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="00:00:00"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_below="@+id/textview_recordstatus"
        android:layout_marginTop="5dip"
        />

    <RelativeLayout
        android:id="@+id/relativelayout_showwaveview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible">
       <com.example.recorddemotwo.view.MyWaveView
           android:id="@+id/mywaveview_one"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:visibility="invisible"
           />
        <com.example.recorddemotwo.view.MyWaveView
            android:id="@+id/mywaveview_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <com.example.recorddemotwo.view.MyWaveView
            android:id="@+id/mywaveview_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <com.example.recorddemotwo.view.MyWaveView
            android:id="@+id/mywaveview_foure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <com.example.recorddemotwo.view.MyWaveView
            android:id="@+id/mywaveview_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </RelativeLayout>
    <View
        android:id="@+id/view_showviewstatus"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/red"
       android:layout_centerInParent="true"
        />

    <RelativeLayout
        android:id="@+id/relative_star_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dip">
        <ImageView
            android:id="@+id/imageview_recordstatus"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_record_tostart"/>
        <TextView
            android:id="@+id/textview_rstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_recordstatus"
            android:layout_centerHorizontal="true"
            android:text="开始"
            android:layout_marginTop="8dip"/>


    </RelativeLayout>

</RelativeLayout>